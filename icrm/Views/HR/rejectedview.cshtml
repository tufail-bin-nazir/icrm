                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label class="form-control-label">@Resources.Resource.Phone_No <span class="tx-danger">*</span></label>
                                        @Html.TextBoxFor(model => model.user.PhoneNumber, new { @readonly = "readonly", @class = "form-control" })
                                    </div>
                                </div>
                                <!-- col-4 -->
