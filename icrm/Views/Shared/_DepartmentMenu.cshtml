@using icrm.Models;
@{
    var data = (ApplicationUser)ViewData["user"];
}
<div class="slim-header">
    <div class="container">
        <div class="slim-header-left">
            <h2 class="slim-logo"><a  href="/Department/DashBoard"><img src="~/Content/img/m_logo.png" width="60px" /></a></h2>

           
            <!-- search-box -->
        </div>
        <!-- slim-header-left -->
        <div class="slim-header-right">
            
            <!-- dropdown -->
            <div class="dropdown dropdown-c">
                <a href="#" class="logged-user" data-toggle="dropdown">
                    <img src="~/Content/img/boss.png" alt="">
                    <span>@data.Email</span>
                    <i class="fa fa-angle-down"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <nav class="nav">
                        <a href="page-profile.html" class="nav-link"><i class="icon ion-person"></i> View Profile</a>
                        <a href="../userprofile/index" class="nav-link"><i class="icon ion-compose"></i> Edit Profile</a>
                        <a href="page-activity.html" class="nav-link"><i class="icon ion-ios-bolt"></i> Activity Log</a>
                        <a href="page-settings.html" class="nav-link"><i class="icon ion-ios-gear"></i> Account Settings</a>
                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, null))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="username" value="@System.Web.HttpContext.Current.User.Identity.Name" />
                            <a href="#" class="nav-link">

                                <i class="icon ion-forward"></i><input class="nav-link" style="background: transparent;
               text-decoration: none;
               cursor: pointer; border:none;" type="submit" value="Sign Out" />
                            </a>


                        }


                    </nav>
                </div>
                <!-- dropdown-menu -->
            </div>
            <!-- dropdown -->
        </div>
        <!-- header-right -->
    </div>
    <!-- container -->
</div>
<!-- slim-header -->

<div class="slim-navbar">
    <div class="container">
        <ul class="nav">
            <li class="nav-item  active">
                <a class="nav-link" href="/Department/DashBoard">
                    <i class="icon ion-ios-home-outline"></i>
                    <span>Dashboard</span>
                </a>

                <!-- sub-item -->
            </li>


            <li class="nav-item with-sub ">
                <a class="nav-link" href="#" data-toggle="dropdown">
                    <i class="icon ion-ios-gear-outline"></i>
                    <span>Menu</span>
                </a>
                <div class="sub-item">
                    <ul>
                        <li class="active">@Html.ActionLink("Open Tickets", "Dashboard", "Department")</li>
                       
                        <li>@Html.ActionLink("Responded Tickets", "responded", "Department")</li>
                        
                       
                    </ul>
                </div>
                <!-- dropdown-menu -->
            </li>
           
        </ul>
    </div>
    <!-- container -->
</div>